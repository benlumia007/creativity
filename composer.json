{
	"name": "luthemes/creativity",
	"type": "classicpress-theme",
	"description": "Creativity is a next-generation theme designed to work with ClassicPress, offering an ideal experience for showcasing your site's content.",
	"keywords": [ "classicpress", "theme" ],
	"homepage": "https://luthemes.com/portfolio/creativity",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Benjamin Lu",
			"email": "benlumia007@gmail.com",
			"homepage": "https://luthemes.com"
		}
	],
	"autoload": {
		"psr-4": {
			"Creativity\\": "app"
		},
		"files": [
			"app/Site/functions-site.php",
			"app/framework.php",
			"app/functions-extras.php",
			"app/functions-scripts.php",
			"app/functions-setup.php"
		]
	},
	"require": {
		"php": ">=7.0",
		"benlumia007/backdrop": "^2.0",
		"benlumia007/backdrop-customize": "^1.0",
		"benlumia007/backdrop-fontawesome": "^1.0",
		"benlumia007/backdrop-fonts": "^1.0",
		"benlumia007/backdrop-mix-manifest": "^1.0",
		"benlumia007/backdrop-template-hierarchy": "^1.0",
		"benlumia007/backdrop-template-manager": "^1.0",
		"benlumia007/backdrop-template-view": "^1.0",
		"benlumia007/backdrop-theme": "^1.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"wptrt/wpthemereview": "^0.2.1",
		"php-parallel-lint/php-parallel-lint": "^1.3"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor ."
	}
}
